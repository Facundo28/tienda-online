// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  category    ProductCategory @default(OTROS)
  userId      String?
  priceCents  Int
  imageUrl    String?
  isActive    Boolean  @default(true)
  stock       Int      @default(1)
  condition   String   @default("NEW") // "NEW" | "USED"
  boostedUntil DateTime?
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  orderItems OrderItem[]
  questions  ProductQuestion[]
  favorites  Favorite[]
  reviews    Review[]

  @@index([isActive])
  @@index([userId])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  productId String
  userId    String
  orderId   String?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}

model ProductQuestion {
  id        String   @id @default(cuid())
  productId String
  userId    String
  text      String
  answerText String?
  answeredAt DateTime?
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
  @@index([createdAt])
}

model Order {
  id            String      @id @default(cuid())
  customerName  String
  customerEmail String
  customerPhone String?
  addressLine1  String
  addressLine2  String?
  city          String
  state         String
  postalCode    String
  status        OrderStatus @default(PENDING)
  deliveryMethod DeliveryMethod @default(PICKUP)
  deliveryStatus DeliveryStatus @default(PENDING)
  paymentMethod  PaymentMethod?
  pickupCode     String?
  fundsReleased  Boolean        @default(false)
  fundsReleaseAt DateTime?
  scanLatitude   Float?
  scanLongitude  Float?
  totalCents    Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  userId        String?
  user          User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  items OrderItem[]
  claim Claim?
  
  // Logistics & Security
  securityKeywords String?  // "ROJO-MESA-PATO" (Server generated)
  proofUrl         String?  // Photo of package
  deliveryLat      Float?   // GPS Lat at delivery
  deliveryLng      Float?   // GPS Lng at delivery
  deliveryTime     DateTime?

  courierId        String?
  courier          User?     @relation("OrderCourier", fields: [courierId], references: [id], onDelete: SetNull)

  messages         OrderMessage[]
  
  // Cancellations & Refunds
  cancellationReason String?
  refundStatus       RefundStatus @default(NONE)
}

model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  priceCents  Int

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@unique([orderId, productId])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  avatarUrl    String?
  phone        String?
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  postalCode   String?
  passwordHash String
  role         UserRole @default(USER)
  
  // KYC / Identity
  isVerified      Boolean @default(false)
  dni             String? @unique // Documento Nacional de Identidad
  documentFrontUrl String?
  documentBackUrl  String?
  identitySelfieUrl String?
  identityDocUrl  String? // Deprecated in favor of Front/Back, keep for legacy or extra docs 
  notifications   Notification[]
  
  // Reputation
  reputationScore Int            @default(50) // Start neutral
  reputationTier  ReputationTier @default(NARANJA)

  // Address Extras
  addressInstructions String?
  addressType         String? // "RESIDENCIAL" | "LABORAL"

  isActive     Boolean  @default(true)
  
  // Security
  twoFactorSecret String? // For TOTP (App)
  enabled2FAMethods String @default("") // "APP,EMAIL,SMS"
  
  phoneCountryCode String?
  otpCode      String?
  otpExpiresAt DateTime?

  // Logistics Hierarchy
  companyOwned   LogisticsCompany? @relation("CompanyOwner")
  
  workerOfId     String?
  workerOf       LogisticsCompany? @relation("CompanyWorkers", fields: [workerOfId], references: [id])
  
  assignedOrders Order[]           @relation("OrderCourier")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sessions Session[]
  products Product[]
  questions ProductQuestion[]
  orders    Order[]
  messages  OrderMessage[]
  favorites Favorite[]
  reviews   Review[]
  claims    Claim[]
  auditLogs AuditLog[]

  // Logistics Tracking
  lastLat      Float?
  lastLng      Float?
  lastLocationUpdate DateTime?

  // Premium / Seller Profile
  storeName         String?  // Nombre fantasía para la tienda oficial
  bannerUrl         String?
  aboutText         String?
  socialWhatsapp    String?
  socialInstagram   String?
  socialFacebook    String?
  socialWebsite     String?
  membershipExpiresAt DateTime?

  // Vehicle Info
  vehicleType  String? // "MOTO" | "AUTO" | "CAMIONETA"
  vehiclePlate String?
  vehicleModel String?
  vehicleColor String?

  @@index([role])
  @@index([isActive])
}

model LogisticsCompany {
  id          String   @id @default(cuid())
  name        String
  cuit        String   // Tax ID (Sensitive)
  phone       String
  email       String
  address     String?
  
  isVerified  Boolean  @default(false)
  isActive    Boolean  @default(true)

  ownerId     String   @unique
  owner       User     @relation("CompanyOwner", fields: [ownerId], references: [id])
  
  workers     User[]   @relation("CompanyWorkers")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(cuid())
  executorId String
  executor   User     @relation(fields: [executorId], references: [id])
  
  action     String   // e.g. "BAN_USER", "FORCE_DELIVERY", " VIEW_SENSITIVE_DATA"
  entity     String   // e.g. "User", "Order"
  entityId   String
  metadata   String?  // JSON string with before/after data
  
  ipAddress  String?
  userAgent  String?

  createdAt  DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  FULFILLED
  DISPUTED
}

enum PaymentMethod {
  CARD
  TRANSFER
  CASH
}

enum UserRole {
  USER
  ADMIN
  LOGISTICS_ADMIN // Dueño de Flota
  DRIVER          // Repartidor
}

enum ReputationTier {
  ROJO      // < 20
  NARANJA   // 20-50
  AMARILLO  // 50-80
  VERDE     // 80-95
  PLATINUM  // > 95
}

enum ProductCategory {
  INDUMENTARIA
  VEHICULOS
  INMUEBLES
  TECNOLOGIA
  HOGAR
  SERVICIOS
  OTROS
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

enum DeliveryMethod {
  PICKUP
  DELIVERY
}

enum DeliveryStatus {
  PENDING
  READY_TO_PICKUP
  ASSIGNED
  ON_WAY
  DELIVERED
}

model Claim {
  id          String      @id @default(cuid())
  orderId     String      @unique
  userId      String
  type        ClaimType   @default(NOT_RECEIVED)
  status      ClaimStatus @default(OPEN)
  description String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  order       Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ClaimStatus {
  OPEN
  RESOLVED_REFUNDED
  RESOLVED_RELEASED
}

enum ClaimType {
  NOT_RECEIVED
  DAMAGED
  OTHER
}

model AdBanner {
  id          String   @id @default(cuid())
  title       String
  imageUrl    String
  redirectUrl String?
  position    String   @default("HOME_MAIN") // "HOME_MAIN", "HOME_SECONDARY", etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Announcement {
  id        String   @id @default(cuid())
  text      String
  isActive  Boolean  @default(true)
  position  String   @default("TOP_BAR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderMessage {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  attachmentUrl String?
  createdAt DateTime @default(now())

  @@index([orderId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, ERROR
  href      String?
  read      Boolean  @default(false)
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([read])
}

enum RefundStatus {
  NONE
  PENDING
  COMPLETED
  REJECTED
}